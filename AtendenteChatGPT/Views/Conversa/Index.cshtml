@model List<conversa>

<h2>Lista de conversas</h2>

<table class="table">
    <thead>
        <tr>
            <th>Atendente</th>
            <th>Atendido</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var conversa in Model)
        {
            <tr>
               
                <td>@conversa.atendente</td>
                <td>@conversa.atendido</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@conversa.Id">Editar</a>
                    <a asp-action="Delete" asp-route-id="@conversa.Id">Excluir</a>
                </td>



            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Cadastrar Nova Conversa</a>